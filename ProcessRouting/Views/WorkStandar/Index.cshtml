<div class="row">
    <div class="col-auto">
        <button id="btnCreate" class="btn btn-primary btn rounded-pill shadow">
            <i class="bi bi-plus-square"></i> Create
        </button>
    </div>
</div>

<div class="row table-responsive mt-2">
    <table class="table table-bordered text-center" style="" >
        <thead>
            <tr>
                <th>WS NUMBER</th>
                <th>DESCRIPTION</th>
                <th>OWNER</th>
                <th>DATE EFFECTIVE</th>
                <th>EXPIRE DATE</th>
                <th>FILE</th>
                <th>NOTE</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody id="dataBody">

        </tbody>
    </table>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
        $(document).ready(function () {
         // Contoh data (bisa diganti dengan hasil API)
        let data = [
            { id: 1, wsNumber: "12345", description: "Sample Description", owner: "John Doe", dateEffective: "2025-03-06", expireDate: "2026-03-06", file: "file1.pdf", note: "Note 1" },
            { id: 2, wsNumber: "67890", description: "Another Description", owner: "Jane Smith", dateEffective: "2025-04-06", expireDate: "2026-04-06", file: "file2.pdf", note: "Note 2" }
        ];

        // Tambahkan baris ke dalam tabel
        $.each(data, function (index, item) {
            let row = `
                <tr>
                    <td>${item.wsNumber}</td>
                    <td>${item.description}</td>
                    <td>${item.owner}</td>
                    <td>${item.dateEffective}</td>
                    <td>${item.expireDate}</td>
                    <td>${item.file}</td>
                    <td>${item.note}</td>
                    <td>
                        <button class="btn btn-warning btn-sm edit-btn" data-id="${item.id}">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                        <button class="btn btn-danger btn-sm delete-btn">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            `;
            $("#dataBody").append(row);
        });

        // Event klik untuk tombol Edit
        $(document).on("click", ".edit-btn", function () {
            let id = $(this).data("id");
            console.log("Edit Clicked - ID:", id);
            if (id) {
                window.location.href = `/WorkStandar/FormUpdateData?id=${id}`;
            } else {
                alert("Error: ID tidak ditemukan!");
            }
        });

        // Event klik untuk tombol Create (Tambah)
        $("#btnCreate").click(function () {
            console.log("Create Clicked");
            window.location.href = "/WorkStandar/FormCreateData";
        });


    });





</script>